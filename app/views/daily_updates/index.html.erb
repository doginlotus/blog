<p id="notice"><%= notice %></p>

<h1>Daily Updates</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_updates.each do |daily_update| %>
      <tr>
        <td><%= daily_update.date %></td>
        <td><%= daily_update.title %></td>
        <td><%= daily_update.body %></td>
        <td><%= link_to 'Show', daily_update %></td>
        <td><%= link_to 'Edit', edit_daily_update_path(daily_update) %></td>
        <td><%= link_to 'Destroy', daily_update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Daily Update', new_daily_update_path %>
